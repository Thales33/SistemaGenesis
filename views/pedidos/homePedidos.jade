extends ../layout

block content
  h1= Pedidos
  br
  .container
   input.light-table-filter(type='search', data-table='order-table', placeholder='Filter')
   br
   br
   table.table.mr-auto.order-table.table
    thead
      tr
       th.text-center Cod
       th Cliente
       th Pre√ßo
       th Desconto
       th Status do Pedido
       th.text-right Actions
    tbody#Tabela
     each pedido, i in pedidos.rows 
      tr
       td.text-center #{pedido.idpedido}
       td #{pedido.nome}
       td #{pedido.preco}
       td #{pedido.desconto}
       td #{pedido.status}
       td.td-actions.text-right
        a(href='/pedidos/editar/#{pedido.idpedido}')
           button.btn.btn-success(type='button', rel='tooltip')
            i.now-ui-icons.ui-2_settings-90
        a(href='/pedidos/delete/#{pedido.idpedido')
           button.btn.btn-danger(type='button', rel='tooltip')  
            i.now-ui-icons.ui-1_simple-remove

