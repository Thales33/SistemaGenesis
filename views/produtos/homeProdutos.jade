extends ../layout

block content
  h1= Produtos
  .container
   table.table.mr-auto
    thead
      tr
       th.text-center Cod
       th Descrição
       th Peso
       th Preço Custo
       th Preço Revenda
       th Preço Cliente
       th Materia Prima
       th.text-right Actions
    tbody
     each produto, i in produtos.rows
      tr
       td.text-center #{produto.idproduto}
       td #{produto.descricao}
       td #{produto.peso} g
       td #{produto.precocusto}
       td #{produto.precorevenda}
       td #{produto.precocliente}
       td #{produto.materia}
       td.td-actions.text-right
          a(href='/produtos/editar/#{produto.idproduto}')
           button.btn.btn-success(type='button', rel='tooltip')
            i.now-ui-icons.ui-2_settings-90
   br
   br
   br
   a.btn.btn-info(type='button',href='produtos/cadProduto') Cadastrar Novo Produto     

      